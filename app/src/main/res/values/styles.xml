        <item name="colorSecondary">@color/teal_200</item>
        <item name="colorOnSecondary">@color/beige</item>
        <item name="colorOnSurface">@color/off_white</item>
    </style>

    <!-- ActionBar styles -->
    <style name="MyActionBar" parent="@style/Widget.AppCompat.Light.ActionBar.Solid.Inverse">
        <item name="background">@color/beige</item>
        <item name="titleTextStyle">@style/MyActionBar.TextStyle</item>
    </style>

    <style name="MyActionBar.TextStyle" parent="TextAppearance.AppCompat.Widget.ActionBar.Title">
        <item name="android:textColor">@color/black</item>
    </style>

</resources>