<?xml version="1.0" encoding="utf-8"?>
<navigation xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/nav_graph"
    app:startDestination="@id/todoListFragment">

    <fragment
        android:id="@+id/todoListFragment"
        android:name="se.millwood.todo.todolist.TodoListFragment"
        android:label="TodoListFragment" >
        <action
            android:id="@+id/action_todoListFragment_to_addTodoFragment"
            app:destination="@id/addTodoFragment" />
        <action
            android:id="@+id/action_todoListFragment_to_todoDetailsFragment"
            app:destination="@id/todoDetailsFragment" />
        <action
            android:id="@+id/action_todoListFragment_to_deleteTodoDialogFragment"
            app:destination="@id/deleteTodoDialogFragment" />
    </fragment>

    <dialog
        android:id="@+id/deleteTodoDialogFragment"
        android:name="se.millwood.todo.DeleteDialogFragment"
        android:label="deleteTodoDialogFragment" />

    <fragment
        android:id="@+id/addTodoFragment"
        android:name="se.millwood.todo.AddTodoFragment"
        android:label="addTodoFragment" />

    <fragment
        android:id="@+id/todoDetailsFragment"
        android:name="se.millwood.todo.TodoDetailsFragment"
        android:label="todoDetailsFragment">
    </fragment>


</navigation>